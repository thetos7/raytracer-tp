{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "object_base",
  "description": "A base for object schemas",
  "title": "ObjectBase",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "description": "The object type"
    },
    "material": {
      "type": "string",
      "description": "The object material. Must reference the name of a material declared under the scene's `materials` property."
    }
  },
  "required": ["type", "material"]
}
